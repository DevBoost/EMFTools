<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.jdt.core.compilationParticipant">
      <compilationParticipant
            class="de.devboost.emfcustomize.builder.EMFCustomizeCompilationParticipant"
            id="de.devboost.emfcustomize.builder.EMFCustomizeCompilationParticipant"
            modifiesEnvironment="true">
      </compilationParticipant>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="de.devboost.emfcustomize.actions.CustomizeActionContribution"
            nameFilter="*Impl.java"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="de.devboost.emfcustomize.actions.CustomizeAction"
               id="de.devboost.emfcustomize.actions.CustomizeAction"
               label="Customize EMF Code">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.emftext.sdk.command.category"
            description="Customizes EMF Code"
            id="de.devboost.emfcustomize"
            name="Customize EMF Code">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.devboost.emfcustomize.handlers.CustomizeHandler"
            commandId="de.devboost.emfcustomize">
         <enabledWhen>
         <with
                  variable="selection">
            <iterate
                     operator="or">
                  <instanceof
                        value="org.eclipse.emf.codegen.ecore.genmodel.GenClass">
                  </instanceof>
               </iterate>
         </with></enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.devboost.emfcustomize"
               label="Customize generated EMF Code"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <count
                     value="1">
               </count>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
